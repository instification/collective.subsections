<tal:sections
     tal:define="portal_tabs view/portal_tabs"
     tal:condition="portal_tabs"
     i18n:domain="plone">

      <p class="hiddenStructure" i18n:translate="heading_sections">Navigation</p>

     <ul id="portal-globalnav"
         tal:define="selected_tab python:view.selected_portal_tab"><tal:tabs tal:repeat="tab portal_tabs"><li tal:define="tid   tab/id;"
	              tal:attributes="id    string:portaltab-${tid};
	                              class python:selected_tab==tid and 'selected' or 'plain'"><a href=""
                     tal:content="tab/name"
                     tal:attributes="href   tab/url;
                                     title  tab/description|nothing;
                                     target tab/link_target|nothing;">
    	            </a><tal:block tal:define="children tab/subtab;
          						                   tname    tab/name"><ul tal:condition="python: len(children) > 0"
              					  tal:attributes="id string:nav-level-2-${tab/id}; class string:nav-level-2;"><tal:block tal:repeat="node children"
                          ><li tal:attributes="class string:nav-level-2-item; id string:nav-level-2-item-${node/id}"
                          ><a tal:content="node/name"
            							   tal:attributes="href node/url;
            											   class node/current">
            							    page name
            							</a><tal:block tal:define="subtabs node/subtabs" tal:condition="subtabs"
                          ><ul tal:condition="python: len(subtabs) > 0"
            									  tal:attributes="id string:nav-level-3-${node/id}; class string:nav-level-3;"
                                ><tal:block tal:repeat="tab subtabs"
                                ><li class="nav-level-3-container"
                                ><a tal:content="tab/name" tal:attributes="href tab/url; class tab/current">sub page</a
                                ><span class="nav-level-3-hr"></span
                      ></li></tal:block></ul></tal:block></li
                      ></tal:block></ul></tal:block></li></tal:tabs></ul>
</tal:sections>
